<%provide(:title, "Search Result") %>

<h1>Search Result for "<%= params[:search] %>"</h1>

<% @items.each do |item|%>
    <div class="row" style="margin-top: 10px;">
      <div class="col-md-3 col-md-offset-3">
        <p> <%= link_to item.title, item %> </p>
        <p> <%= item.description %> </p>
      </div>
      <div class="col-md-3 col-md-offset-2">
        <%= link_to(image_tag(item.avatar_url(:large)), item) if item.avatar? %>
      </div>
    </div>

<% end %>
