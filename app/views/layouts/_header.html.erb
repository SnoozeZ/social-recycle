<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Social Recycle", root_path, id: "logo" %>
    </div>

    <%= form_tag(items_path, method: "get", id: "search-form", class: "navbar-form navbar-left") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
        <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
    <% end %>
    <nav>
      <nav class="nav navbar-right">
        <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.username %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
        <% else %>
          <%= link_to "Sign up", signup_path, class: "btn btn-success navbar-btn", id: "sign-up-btn"%>
          <%= link_to "Sign in", signin_path, class: "btn btn-default navbar-btn", id: "sign-in-btn"%>
        <% end %>
      </nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",    root_path %></li>
        <li><%= link_to "Map Search",    '#' %></li>
      </ul>
    </nav>
  </div>
</header>